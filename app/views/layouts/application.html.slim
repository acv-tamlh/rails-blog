doctype html
html
  head
    title
      | Blog
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
  .container
      p.notice.text-success
        =notice
      p.alert.text-danger
        =alert
      button.btn.btn-warning.pull-right
        - if user_signed_in?
          =link_to 'Signout user', destroy_user_session_path, method: :delete
      = yield
